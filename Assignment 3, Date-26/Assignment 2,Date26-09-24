//Assignment no.-2
//Find the largest of three numbers using function
//Date-26/09/2024


#include<stdio.h>  
  
int biggest(int, int, int); 
  
int main()  
{  
    int a, b, c;  
  
    printf("Enter 3 integer numbers\n");  
    scanf("%d%d%d", &a, &b, &c);  
  
    
    printf("Biggest of %d, %d and %d is %d\n", a, b, c, biggest(a, b, c));  
  
    return 0;  
}  
  
  
int biggest(int x, int y, int z)  
{  
    if(x > y && x > z)  
    {  
       return x;  
    }  
    else  
    {  
       if(y > z)  
          return y;  
       else  
          return z;  
    }  
}  
